{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
    "noEmit": false,
    "verbatimModuleSyntax": false
  },
  "include": [
    "vite.config.ts",
    "netlify/functions/**/*"
  ]
}